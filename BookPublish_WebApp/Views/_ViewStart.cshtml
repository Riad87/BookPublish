@{
    string current = Convert.ToString(HttpContext.Current.Request.IsAuthenticated);
    string req = Convert.ToString(HttpContext.Current.Request.RawUrl);

  
    if (current == "False" && req == "/Account/Login")
    {
        Layout = "~/Views/Shared/_LoginLayout.cshtml";
    }
    if (current == "False" && req == "/")
    {
        Layout = "~/Views/Shared/_LoginLayout.cshtml";
    }
    else if (current == "True" && req == "/Account/Login")
    {
        Layout = "~/Views/Shared/_LoginLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
