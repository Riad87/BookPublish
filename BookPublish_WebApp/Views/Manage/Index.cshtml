@model BookPublish_WebApp.Models.IndexViewModel
@{
    ViewBag.Title = "Felhasználói fiók admin felülete";
}
<div id="nifty">
    <h2>@ViewBag.Title.</h2>

    <p class="text-success">@ViewBag.StatusMessage</p>
    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt>Jelszó:</dt>
            <dd>
                [
                @if (Model.HasPassword)
            {
                    @Html.ActionLink("Jelszó módosítás", "ChangePassword")
                }
                else
                {
                    @Html.ActionLink("Jelszó megadás", "SetPassword")
                }
                ]
            </dd>
           
        </dl>
    </div>
</div>
